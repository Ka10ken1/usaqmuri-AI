# ============================================================================
# Database Configuration
# ============================================================================
MONGO_PASSWORD=your_secure_mongodb_password_here
MONGODB_URL=mongodb://admin:your_secure_mongodb_password_here@localhost:27017/job_search?authSource=admin

# ============================================================================
# Redis Cache
# ============================================================================
REDIS_URL=redis://localhost:6379

# ============================================================================
# Machine Learning & Training
# ============================================================================
# Weights & Biases (optional, for training tracking)
WANDB_API_KEY=your_wandb_api_key_here

# Hugging Face API (optional, for model downloads)
HUGGINGFACE_TOKEN=your_huggingface_token_here

# CUDA Configuration
CUDA_VISIBLE_DEVICES=0

# ============================================================================
# Application Configuration
# ============================================================================
ENVIRONMENT=development
DEBUG=true
LOG_LEVEL=INFO

# Server Configuration
HOST=0.0.0.0
PORT=8000

# ============================================================================
# Job Scraping Configuration
# ============================================================================
# Georgian job sites
HR_GE_ENABLED=true
JOBS_GE_ENABLED=true

# International job sites (require API keys)
LINKEDIN_API_KEY=your_linkedin_api_key_here
INDEED_API_KEY=your_indeed_api_key_here
GLASSDOOR_API_KEY=your_glassdoor_api_key_here

# Scraper settings
SCRAPER_DELAY=2
SCRAPER_MAX_JOBS=1000
SCRAPER_HEADLESS=true

# ============================================================================
# Security Configuration
# ============================================================================
SECRET_KEY=your_secret_key_for_jwt_tokens_here
ALLOWED_HOSTS=localhost,127.0.0.1,your-domain.com

# ============================================================================
# Email Configuration (for notifications)
# ============================================================================
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASSWORD=your_app_password_here
EMAIL_FROM=your_email@gmail.com

# ============================================================================
# Monitoring & Analytics
# ============================================================================
SENTRY_DSN=your_sentry_dsn_here
ANALYTICS_ENABLED=false
